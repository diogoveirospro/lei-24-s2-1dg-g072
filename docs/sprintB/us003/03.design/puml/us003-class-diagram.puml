@startuml
'skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
'skinparam linetype orto

skinparam classAttributeIconSize 0

'left to right direction

class Collaborator {
    - details: String

    + Collaborator(details)
}


class RegisterCollaboratorUI {

}

class RegisterCollaboratorController {
    + CreateCollaboratorController(collaboratorRepository)
    + registerCollaborator(details)
}

class Repositories {
    - Repositories()
    + getInstance() : Repositories
    + getCollaboratorRepository() : Repositories
}

class CollaboratorRepository {
    + register()
}


RegisterCollaboratorUI .> RegisterCollaboratorController
RegisterCollaboratorController .> Repositories : repositories
Repositories --> Repositories : instance
Repositories "1" --> "1" CollaboratorRepository
CollaboratorRepository o-- "*" Collaborator : has
RegisterCollaboratorController .> CollaboratorRepository : collaboratorRepository
RegisterCollaboratorController .> Collaborator : collaborator

@enduml