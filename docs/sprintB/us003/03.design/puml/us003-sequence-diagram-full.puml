@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber
actor HRM
participant ":RegisterCollaboratorUI" as RegisterCollaboratorUI
participant ":RegisterCollaboratorController" as RegisterCollaboratorController
participant ":Repositories" as REP
participant "repositories:Repositories" as repositories
participant "collaboratorRepository\n:CollaboratorRepository" as CollaboratorRepository
participant "collaborator:\nCollaborator" as collaborator

activate HRM
HRM -> RegisterCollaboratorUI: Request to register a collaborator
activate RegisterCollaboratorUI
RegisterCollaboratorUI -> HRM: Requests collaborator details
deactivate RegisterCollaboratorUI
HRM -> RegisterCollaboratorUI: Provides collaborator details
activate RegisterCollaboratorUI
RegisterCollaboratorUI -> HRM: Shows details and requests confirmation
deactivate RegisterCollaboratorUI
HRM -> RegisterCollaboratorUI: Confirms details
activate RegisterCollaboratorUI
RegisterCollaboratorUI -> RegisterCollaboratorController: RegisterCollaborator(name, birthdate,\n admissionDate, address, mobile phone,\n email, taxpayer number, idDocumentType,\n idDocumentNumber)
activate RegisterCollaboratorController
RegisterCollaboratorController -> REP: getInstance()
activate REP
REP -> RegisterCollaboratorController: repositories
deactivate REP
RegisterCollaboratorController -> repositories: getCollaboratorRepository()
activate repositories
repositories -> RegisterCollaboratorController: collaboratorRepository
deactivate repositories
RegisterCollaboratorController -> CollaboratorRepository: registerCollaborator(name, birthdate,\n admissionDate, address, mobile phone,\n email, taxpayer number, idDocumentType,\n idDocumentNumber)
activate CollaboratorRepository
CollaboratorRepository -> collaborator**: Collaborator(name, birthdate, admissionDate,\n address, mobile phone, email,\n taxpayer number, idDocumentType,\n idDocumentNumber)
CollaboratorRepository -> CollaboratorRepository: addCollaborator(collaborator)

activate CollaboratorRepository
CollaboratorRepository -> CollaboratorRepository: validateCollaborator(collaborator)

activate CollaboratorRepository



CollaboratorRepository --> RegisterCollaboratorController: collaborator
deactivate CollaboratorRepository
deactivate CollaboratorRepository
deactivate CollaboratorRepository
RegisterCollaboratorController --> RegisterCollaboratorUI: collaborator
deactivate RegisterCollaboratorController
RegisterCollaboratorUI --> HRM: display operation success
deactivate RegisterCollaboratorUI
deactivate HRM
@enduml
