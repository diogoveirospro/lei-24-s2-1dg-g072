@startuml
'skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
'skinparam linetype orto

skinparam classAttributeIconSize 0

'left to right direction

class HRM {
    + HRM()
    + generateTeamProposal(size, members)
}

class GenerateTeamProposalController {
    + GenerateTeamProposalController(skillRepository, collaboratorRepository, teamRepository)
    + listSkills()
    + chooseMembers(skills)
    + generateTeamProposal(size, members)
    + createTeam(teamProposal)
}


class GenerateTeamProposalUI {
}

class Repositories {
    - Repositories()
    + getInstance() : Repositories
    + getSkillRepository()
    + getCollaboratorRepository()
    + getTeamRepository()

}

class skillRepository {

}

class collaboratorRepository {

}

class teamRepository {
    - addTeam(team)
    - validateTeam(team)
    - create(teamProposal)
}

class Team {
    - size : int
    - members : ArrayList<Collaborator>
    + Team(size, members)
}

class Collaborator {
    - name : String
    - birthdate : String
    - admissionData : String
    - address : String
    - contactInfo : int
    - idDocumentType : String
    - idDocumentNumber : int
    + Collaborator(name, birthdate, admissionData, address, \ncontactInfo, idDocumentType, idDocumentNumber)
}

class Skill {
    - name : String
    + Skill(name)
}

GenerateTeamProposalUI .> GenerateTeamProposalController
GenerateTeamProposalController .> Repositories : repositories
Repositories --> Repositories : instance

Repositories --> "1" skillRepository
Repositories --> "1" collaboratorRepository
Repositories --> "1" teamRepository

GenerateTeamProposalController .> skillRepository : skillRepository
GenerateTeamProposalController .> collaboratorRepository : collaboratorRepository
GenerateTeamProposalController .> teamRepository : teamRepository

HRM "1" --> "*" Team : creates
Team "1" --> "1..*" Collaborator : has
Collaborator "1" --> "*" Skill : has

GenerateTeamProposalController .> Team : team
skillRepository --> Skill : has
collaboratorRepository --> Collaborator : has


@enduml