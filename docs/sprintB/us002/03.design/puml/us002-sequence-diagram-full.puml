@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber

'hide footbox
actor "Human Resources\n Manager" as HRM
participant ":RegisterJobUI" as UI
participant ":RegisterJobController" as CTRL
participant Repositories
participant "repositories:Repositories" as REP
participant "jobRepository" as JREP
participant "job\n:Job" as Job

activate HRM

    HRM -> UI : asks to create a new job

    activate UI

        UI --> HRM : requests name
    deactivate UI

    HRM -> UI : types requested name
    activate UI

        UI --> HRM : requests confirmation
    deactivate UI

    HRM -> UI : confirms
    activate UI

        UI -> CTRL : registerJob(name)
        activate CTRL

            CTRL -> Repositories: getInstance()
            activate Repositories

            Repositories --> CTRL: repositories
            deactivate Repositories

            CTRL -> REP: getSkillsRepository()
            activate REP

            REP --> CTRL: jobRepository
            deactivate REP

            CTRL -> ORG : registerJob(name)
            activate ORG

            ORG -> Job**: register(name)
                ORG -> ORG: addJob(job)
                activate ORG

                ORG -> ORG: validateJob(job)
                activate ORG

            ORG --> CTRL : job
            deactivate ORG

            CTRL --> UI : job
        deactivate CTRL

        UI --> HRM: displays operation success
    deactivate UI

deactivate HRM

@enduml