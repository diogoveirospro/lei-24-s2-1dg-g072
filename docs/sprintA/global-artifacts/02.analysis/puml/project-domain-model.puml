@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
'skinparam linetype ortho
'left to right direction
skinparam classAttributeIconSize 0
hide circle
hide methods

class HRM {
    name
    birthdate
    admissionDate
    address
    contactInfo
    idDocumentType
    idDocumentNumber
}

class Skill {
    name
}
class Job {
    name
}


class Team {
    size
    members

}

class Collaborator {
    name
    birthdate
    admissionDate
    address
    contactInfo
    idDocumentType
    idDocumentNumber
}



class GreenSpace {
    name
    address
    type
}

class Garden {
    name
    address
    dimension
}

class MediumSizedPark {
    name
    address
    dimension
}

class LargeSizedPark {
    name
    address
    dimension
}


class Vehicle{
    plate id
    brand
    model
    type
    tare
    gross weight
    current kms
    registration date
    acquisition date
    maintenance/check-up frequency
}

class VFM {
    name
    birthdate
    admission date
    address
    phone number
    email
    identification document
    number
}

class VehiclesCheckUp {
    plate id
}


Collaborator <|-- HRM

'US001
HRM "1" -- "1..*" Skill: creates >

'US002
HRM "1" -- "1..*" Job : creates >

'US003
HRM "1" --> "*" Collaborator : registers

'US004
HRM "1" -- "1..*" Skill : assigns >
Collaborator "1" -- "1..*" Skill : has >

'US005
HRM "1" - "1..*" Team : creates >
Collaborator "1" -- "1" Job: has >
Team "1" -- "1..*" Collaborator: has >
GreenSpace "1" -- "1..*" Collaborator: contains >
GreenSpace <|-- Garden
GreenSpace <|-- MediumSizedPark
GreenSpace <|-- LargeSizedPark

Collaborator <|-- VFM

'US006
VFM "1"-"   1..*" Vehicle: registers >

'US007
VFM "1"-"   1..*" Vehicle: chooses >

'US008
VFM "1" -- "1..*" VehiclesCheckUp: lists >


@enduml