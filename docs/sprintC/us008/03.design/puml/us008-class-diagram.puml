@startuml
'skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
'skinparam linetype orto

skinparam classAttributeIconSize 0

'left to right direction

class ListMaintenanceUI{

}
class VehicleMapper{
    - vehicleList
    + toDto(vehicleList)
    + addVehicle(vehicle)
}
class VehicleDto{
    - String plateNumber
    - String brand
    - String model
    - String type
    - Double tare
    - Double grossWeight
    - Double currentKms
    - String registrationDate
    - String acquisitionDate
    - Double serviceFrequency
    - Double kmAtLastMaintenance
    vehicleDto(vehicle)
}
class ListMaintenanceController{
    + getVehicleList()
    + createMaintenanceController()
    + toDto(vehicleList)
}
class MaintenanceRepository{
    - vehicleList
    + getVehicleList()
    + removeVehicle(vehicle)
}

class Maintenance{
    - vehicle
    + validateVehicleMaintenance(vehicle)
}
class VehicleRepository{
    + getVehicleList
}
class Repositories{
 - Repositories()
 + getMaintenanceRepositories(): Repositories
 + getInstance(): Repositories
}

ListMaintenanceUI .> ListMaintenanceController
ListMaintenanceController ..> Repositories : repositories
Repositories -> Repositories : instance
ListMaintenanceController .> MaintenanceRepository: maintenanceRepository
Repositories "1" ---> "1" MaintenanceRepository
Repositories "1" ..> "1" VehicleRepository: vehicleRepository
ListMaintenanceController "1" -> "1" VehicleRepository
MaintenanceRepository o- "*" Maintenance : has
ListMaintenanceController "1" -> "1" VehicleMapper: vehicleList
VehicleMapper "1" -> "1" VehicleDto: vehicle
@enduml