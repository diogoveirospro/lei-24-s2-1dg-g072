@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

participant "skillRepository\n:SkillRepository" as SREP
participant "skill\n:Skill" as SKILL

autonumber 11
-> SREP: registerSkill(name)

autonumber 11.1
activate SREP
    group Register Skills

        SREP -> SKILL**: registers(name)
        SREP -> SREP: addSkill(skill)
        activate SREP
                SREP -> SREP: validateSkill(skill)
                activate SREP




    end

    autonumber 12
    <-- SREP : skill
                deactivate SREP

       deactivate SREP

deactivate SREP
@enduml