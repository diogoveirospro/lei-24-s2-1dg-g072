<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controller.Uss.AddToDoListEntryUIController">
   <top>
      <GridPane prefHeight="75.0" prefWidth="644.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Entry to the To-Do List" textAlignment="CENTER" wrappingWidth="267.13671875" />
         </children>
      </GridPane>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
         
                   <Label text="Tasks" />
                   <ListView fx:id="taskListView" prefHeight="162.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
         
                   <Label text="Green Space Name" />
                  <ComboBox fx:id="cbGreenSpaceName" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
      
                <Label text="Degree of Urgency" />
                <ComboBox fx:id="degreeOfUrgencyComboBox">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Low" />
                            <String fx:value="Medium" />
                            <String fx:value="High" />
                        </FXCollections>
                    </items>
                </ComboBox>
               <HBox prefHeight="100.0" prefWidth="200.0" />
            </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
      
             <Button fx:id="confirmButton" text="Add Entry" />
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Button" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
