<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.controller.Uss.AssignVehicleUIController"
          alignment="CENTER" hgap="10" vgap="10">

    <Label text="Assign Vehicle to Agenda Entry" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label text="Agenda Entries:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="agendaEntryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" />
    <Label text="Valid Vehicles for Selected Entry:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="vehicleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200" />
    <Button text="Assign Vehicle" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" onAction="#assignVehicle" />
    <Label fx:id="statusLabel" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" text="" />
</GridPane>
